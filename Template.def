[Statedef -4]

; makes the attachedchar itself invulnerable
[State ]
ignorehitpause = 1
trigger1 = !ishelper
type = nothitby
value = SCA

; makes sure the camera does not follow the attachedchar
[State ]
ignorehitpause = 1
trigger1 = !ishelper
type = screenbound
value = 0

; makes sure characters can walk over the attachedchar
[State ]
ignorehitpause = 1
trigger1 = !ishelper
type = playerpush
value = 0

; prevents some unwanted behavior and debug warnings
[State ]
ignorehitpause = 1
trigger1 = !ishelper
type = assertspecial
flag = nohardcodedkeys
flag2 = noautoturn

; prevents playable characters from facing the attachedchar
[State ]
ignorehitpause = 1
trigger1 = !standby && !ishelper
type = tagout